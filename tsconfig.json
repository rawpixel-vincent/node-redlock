{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ESNext",
    "module": "esnext",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "sourceMap": true,
  },
  "include": ["./src/**/*"]
}
